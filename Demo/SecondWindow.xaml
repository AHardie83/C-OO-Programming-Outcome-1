<Window x:Class="Demo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="650.4" Width="691" Background="#FFE3E3EC">
    <Grid Margin="23,24,0,61">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstbox_AllStudents" HorizontalAlignment="Left" Height="516" Margin="3,8,0,0" VerticalAlignment="Top" Width="430" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.007"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Button x:Name="btn_Close" Content="Close" HorizontalAlignment="Left" Margin="488,10,0,0" VerticalAlignment="Top" Width="124" Height="30" Click="btn_Close_Click" Grid.Column="1"/>
        <Button x:Name="btn_DeleteRecord" Content="Delete Record" Grid.Column="1" HorizontalAlignment="Right" Margin="0,495,38,0" VerticalAlignment="Top" Width="124" Height="29" Click="btn_DeleteRecord_Click_1"/>
    </Grid>
</Window>
